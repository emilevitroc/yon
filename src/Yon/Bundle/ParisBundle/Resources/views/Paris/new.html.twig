        <div class="col-md-12">
            <div class="box box-primary">

                <form action="" {{ form_enctype(form) }} method="POST" class="form-edit-new form-horizontal" role="form">

                    <div class="box-header">
                        <h3 class="box-title">Ajout Paris</h3>
                    </div>
                    {{ form_start(form) }}
